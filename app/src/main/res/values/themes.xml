<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Balticshipyardinventorymobileapp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bzColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog_Rounded</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="colorPrimary">@color/bzColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog_Rounded</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="statusBarBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/bzColor</item>
        <item name="android:textColorSecondary">@color/bzColor</item>
        <item name="android:textColor">@color/bzColor</item>
        <item name="android:actionMenuTextColor">@color/bzColor</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog_Rounded</item>
        <!--        <item name="android:statusBarColor">@color/colorTransparrent</item>-->
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>

    </style>

    <!-- BottomSheet Dialog-->
    <style name="BottomSheetDialog_Rounded" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet_Rounded</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="BottomSheet_Rounded" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheetDialog_Rounded</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog_Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!--TEXT INPUT-->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <!--        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>-->
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/bzColor</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="colorError">@color/shrine_red</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="EditIOPDialogTheme" parent="NoActionBarTheme">
        <item name="android:windowLightStatusBar">false</item>
        <!--        <item name="android:windowFullscreen">true</item>                       //remove status bar-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>        //smooth animation
        <item name="colorAccent">@color/colorAccent</item>                      //change button text color
    </style>

</resources>